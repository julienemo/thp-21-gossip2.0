<%= form_tag gossip_comments_path(@id), method: "post" do %>
  <%= label_tag 'Leave a comment:' %><br />
  <%= text_area_tag 'c_content', nil, class: 'form-control'%>
  <br /> <br />
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% if current_user%>
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% else %>
    <a class="btn btn-primary" href="/sessions/new">Submit</a>
  <% end %>
<% end %>
<br/><br/>
