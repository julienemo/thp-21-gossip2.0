<!DOCTYPE html>
<html>
  <head>
    <title>Gossip Project 2.0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!--Only one bootstrap link here:-->
    <!--that of the theme-->
    <!--on need to paste the general bootstrap link-->
    <!--navbar is also here, instead of in each of the pages-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootswatch/4.3.1/lux/bootstrap.min.css" type = "text/css">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light" style="padding: 10px 20px;">
        <ul class="form-inline">
          <% if current_user%>
            <li><a class="navbar-brand" href="#">Gossiping <%= current_user.first_name%></a></li>
            <li><a class="nav-link" href="cities/show">My city</a></li>

          <% else %>
            <li><a class="navbar-brand" href="#">Gossip Project 2.0</a></li>
          <% end %>
          <li><a class="nav-link" href="/index">Home</a></li>
          <li><a class="nav-link" href="/team">Team</a></li>
          <li><a class="nav-link" href="/contact">Contact</a></li>
        </ul>
            <% if current_user %>
            <ul class="form-inline">
              <li class="nav-item btn btn-primary">
                <%= link_to 'Sign out', session_path(session[:user_id]), method: :delete, data: { confirm: 'Are you sure?' },class: "nav-link", style: "color: #fff;" %>
              </li>
            </ul>
            <% else %>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
              <ul class="navbar-nav mr-auto form-inline">
              <li class="nav-item btn">
                <a class="nav-link" href="/users/new" style="color: #000;">Sign up</a>
              </li>
              <li class="nav-item btn">
                <a class="nav-link" href="/sessions/new"style="color: #000;">Sign in</a>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <% if flash[:success] %>
      <div class="alert alert-success" role="alert">
        <%= flash[:success] %>
      </div>
    <% end %>
    <% if flash[:danger] %>
      <div class="alert alert-danger" role="alert">
        <%= flash[:danger] %>
      </div>
    <% end %>
    <%= yield %>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>
