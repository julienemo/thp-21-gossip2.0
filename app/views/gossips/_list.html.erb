<% gossips.all.each do |g| %>

  <div class="card col-md-3.05">
    <div class="card-body d-flex flex-column justify-content-between">
      <div class= 'col'>
        <p  class="card-text">Gossip <%= g.id %>

        <h5 class="card-title">"<%= g.content %>"</h5>
        <p  class="card-text">
          says <a href="/users/<%= g.user_id%>"><%= User.find(g.user_id).first_name%></a>
        </p>
      </div>
      <div class = 'col flex-grow-0'>
        <span class="incard"> <%= g.comments.length %> comments</span>
        <%if current_user%>
          <%= button_to 'Like', gossip_likes_path(g.id, params[:id]), method: :post,class:"btn-primary btn" %>
          <span class="incard"><%= g.likes.count %> <%= (g.likes.count) == 1 ? 'Like' : 'Likes'%></span>
        <% end %>
      <!--all divs have 'flex-grow-1' by default-->
      <!--in vertical alignment they grow proportionally to take all available place-->
      <!--had to overwrite this for the button so that it stays at the bottom (with justify-content-between)-->
      <!--therefore aligning postions of all buttons-->
      <!--for other alignments go check application.css-->
        <a href="/gossips/<%=g.id %>" class="btn btn-primary w-100">See Gossip</a>
      </div>
    </div>
  </div>
<% end %>
