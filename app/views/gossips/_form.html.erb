<%= form_tag url_for(action: 'create'), method: "post" do %>
  <%= label_tag 'Title (Mandatory, 3-14 characters)' %><br />
  <%= text_field_tag 'title', nil, class: 'form-control', style: 'width:30%', placeholder: holders[0] %>
  <br /> <br />
  <%= label_tag 'Content (Mandatory, 3-14 characters)' %><br />
  <%= text_area_tag 'content', nil, class: 'form-control',  placeholder: holders[1]%>
  <br /> <br />
  <%= label_tag 'Choose a tag (optional)' %><br />
  <%= select_tag "tag",options_from_collection_for_select(Tag.all, "id", "title"), multiple: true, class: "form-control"%>
  <br /> <br />
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <%= submit_tag "Submit", class: 'btn btn-primary' %>
<% end %>
